@model JD.BitBet.BL.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-modal">
        <h2 class="login-title">Welcome to BitBet!</h2>
        <p>Please log in to continue.</p>

        @if (ViewBag.Error != null)
        {
            <div class="error-message">@ViewBag.Error</div>
        }

        <form asp-controller="User" asp-action="Login" method="post">
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" name="Email" id="Email" class="form-control" placeholder="Enter your email" required />
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input type="password" name="Password" id="Password" class="form-control" placeholder="Enter your password" required />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Log In</button>
        </form>

        <div class="additional-links">
            <p>Forgot your password? <a asp-action="ForgotPassword" asp-controller="User">Click here</a></p>
            <p>Don't have an account? <a asp-action="Register" asp-controller="User">Sign up</a></p>
        </div>
    </div>
</div>


<style>
    body {
        font-family: Arial, sans-serif;
        background: linear-gradient(to right, #4e54c8, #8f94fb);
        height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        width: 100%;
        max-width: 400px;
        margin: auto;
    }

    .login-modal {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    .login-title {
        margin-bottom: 15px;
        font-size: 24px;
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .btn {
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #4e54c8;
        color: white;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #8f94fb;
        }

    .additional-links {
        margin-top: 15px;
    }

        .additional-links a {
            color: #4e54c8;
            text-decoration: none;
        }

            .additional-links a:hover {
                text-decoration: underline;
            }

    .error-message {
        color: red;
        margin-bottom: 10px;
    }
</style>
